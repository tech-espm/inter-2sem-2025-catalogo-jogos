<div class="container-fluid-catalogo">

    <!-- Primeira linha -->

    <div id="catalogodinamico" class="row g-4 custom-row mx-auto">
        <% for (let i=0; i < jogos.length; i++) { %>
            <div class="col catalogo-item">
                <a class="cards-catalogo" href="/jogo/<%= jogos[i].id_jogo %>">
                    <img src="/public/img/CapaJogosVertical/<%= jogos[i].id_jogo %>.jpg"
                        class="card-img-top card-img-game ">
                </a>

            </div>
            <% } %>
    </div>

    <script>
        (function () {
            const root = document.getElementById("catalogodinamico");

            function getCols() {
                const w = window.innerWidth;

                if (w < 576) return 2;  // mobile -> 2 colunas
                if (w < 992) return 3;  // tablet -> 3 colunas
                return 5;               // desktop -> 5 colunas
            }

            function buildGrid() {
                const cols = getCols();

                root.classList.remove("catalogo-1", "catalogo-2", "catalogo-3", "catalogo-5");
                root.classList.add(`catalogo-${cols}`);
            }

            let t;
            window.addEventListener('resize', () => {
                clearTimeout(t);
                t = setTimeout(buildGrid, 150);
            });

            buildGrid(); // monta ao carregar
        })();
    </script>




